	<%- model_class = Artist -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @artist.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:spotify_reference) %>:</strong></dt>
  <dd><%= @artist.spotify_reference %></dd>
</dl>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Album</th>
      <th>Release Date</th>
      <th>Popularity Avg</th>
      <th>Longest Track</th>
      <th>Duration (milisecs)</th>
    </tr>
  </thead>
  <tbody>
    <% @artist.albums_details.each do |a| %>
      <tr>
        <td><%=a['album_name']%></td>
        <td><%=a['release_date']%></td>
        <td><%=a['avg']%></td>
        <td><%=a['track_name']%></td>
		<td><%=a['max_duration_ms']%></td>

      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              artists_path, :class => 'btn'  %>
</div>
