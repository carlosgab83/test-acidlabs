<h1>Listing tracks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Duration ms</th>
      <th>Popularity</th>
      <th>Spotify reference</th>
      <th>Album</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.name %></td>
        <td><%= track.duration_ms %></td>
        <td><%= track.popularity %></td>
        <td><%= track.spotify_reference %></td>
        <td><%= track.album %></td>
        <td><%= track.created_at %></td>
        <td><%= link_to 'Show', track %></td>
        <td><%= link_to 'Edit', edit_track_path(track) %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

